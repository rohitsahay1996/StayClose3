<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e5f5"
    tools:context="com.example.rohit.stayclose.AboutActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/about_img"
            android:transitionName="image_trans"
            android:layout_marginLeft="130dp"
            android:src="@mipmap/ic_launcher"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:layout_height="200dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT STAY CLOSE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay Close is an android mobile application in which the user can select popular and free video calling android application from variety of choice and can enjoy free video and voice calling.
In this app FIREBASE is used as a backend from which all the information is retrieved and displayed."
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"

                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:layout_marginRight="20dp"
            android:layout_height="200dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT DEVELOPER"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am Rohit Sahay from Patna, Currently studying in SRM university Chennai, in 2nd year CSE B.Tech. I did my schooling from D.A.V Public school Patna.
I am very curious about mobile application development and I am building android application from one year."
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="8dp"

                />

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>
